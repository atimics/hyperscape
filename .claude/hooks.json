{
  "version": 1,
  "hooks": {
    "beforeMCPExecution": [
      {
        "command": "./save_hook_payload.sh"
      }
    ],
    "beforeSubmitPrompt": [
      {
        "command": "./hooks/research-reminder.sh"
      },
      {
        "command": "./hooks/kiss-reminder.sh"
      }
    ],
    "afterFileEdit": [
      {
        "command": "./hooks/enforce-plugin-rules.sh"
      }
    ],
    "beforeReadFile": [
      {
        "command": "./hooks/research-check.sh"
      }
    ]
  }
}
